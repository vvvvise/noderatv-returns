{
  "name": "@noderatv-returns/synaptix",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "apollo-server": "^3.13.0",
    "express": "^4.21.2",
    "express-graphql": "^0.12.0",
    "graphql": "^16.10.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.24.0",
    "reflect-metadata": "^0.2.2",
    "type-graphql": "2.0.0-rc.2"
  },
  "devDependencies": {
    "@prisma/engines": "^5.18.0",
    "@types/express": "^5.0.0",
    "@types/graphql-fields": "^1.3.9",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "globals": "^15.14.0",
    "gql": "^1.1.2",
    "prisma": "^5.18.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "type-graphql": "^2.0.0-rc.2",
    "typegraphql-prisma": "0.28.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.6"
  },
  "scripts": {
    "clean": "rm -rfi ./generator-build && rm -rfi ./prisma/generated",
    "cp": "cp -afvR ../../node_modules/@prisma/client/generator-build ./",
    "dev": "vite --host --port 8888 --debug | tee vite.log",
    "build": "yarn setup && yarn prisma generate",
    "lint": "eslint .",
    "preview": "vite preview",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma && yarn cp",
    "prisma:init": "prisma init --datasource-provider sqlite",
    "prisma:lint": "prisma format --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate development",
    "prisma:push": "prisma db push --schema=./prisma/schema.prisma",
    "prisma:studio": "prisma studio",
    "seed": "ts-node --esm --transpile-only src/seed",
    "start": "ts-node --esm --transpile-only src/index",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "yarn setup:development",
    "setup:development": "cross-env BUILD_ENV=\"dev\" cp dotenv.development .env",
    "setup:staging": "cross-env BUILD_ENV=\"local\" cp dotenv.staging .env",
    "setup:production": "cross-env BUILD_ENV=\"production\" cp dotenv.production .env"
  },
  "type": "module"
}
