{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "paths": {
      "@repo/*": ["./*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["prisma/**/*.ts", "src/**/*.ts"],
  "files": ["prisma/generated/**/*.ts", "src/**/*.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
