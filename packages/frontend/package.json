{
  "name": "@return-of-noderatv/frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite --host",
    "build": "yarn setup && vite build",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist",
    "typecheck": "tsc --pretty --noEmit -p ./tsconfig.json",
    "storybook": "storybook dev -p 6006",
    "test-storybook": "test-storybook --url http://localhost:6006",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"yarn build-storybook --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && yarn test-storybook\"",
    "build-storybook": "storybook build",
    "setup": "yarn setup:example",
    "setup:example": "cross-env BUILD_ENV=\"dev\" cp .env.example .env",
    "setup:development": "cross-env BUILD_ENV=\"dev\" cp .env.development .env",
    "setup:staging": "cross-env BUILD_ENV=\"local\" cp .env.staging .env",
    "setup:production": "cross-env BUILD_ENV=\"production\" cp .env.production .env"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io-client": "^4.8.1",
    "storybook": "^8.4.7",
    "styled-components": "^6.1.13"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3",
    "@storybook/addon-coverage": "^1.0.5",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/addon-themes": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@storybook/test-runner": "^0.21.0",
    "@testing-library/react": "^8.0.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/socket.io-client": "^3.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-storybook": "^0.11.1",
    "typescript": "^5.7.2",
    "unplugin-auto-import": "^0.19.0",
    "vite": "^4.5.5"
  }
}
