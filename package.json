{
  "name": "@return-of-noderatv/repo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "app": "yarn workspace @return-of-noderatv/frontend",
    "server": "yarn workspace @return-of-noderatv/backend",
    "dev": "turbo dev",
    "dev:app": "turbo dev --scope=@return-of-noderatv/frontend",
    "dev:server": "turbo dev --scope=@return-of-noderatv/backend",
    "build": "turbo build",
    "build:app": "turbo build --scope=@return-of-noderatv/frontend",
    "build:server": "turbo build --scope=@return-of-noderatv/backend",
    "lint": "turbo lint",
    "format": "prettier --write .",
    "typecheck": "turbo typecheck",
    "clean": "turbo run clean"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@return-of-noderatv/backend": "workspace:*",
    "@return-of-noderatv/frontend": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@typescript-eslint/typescript-estree": "^8.18.2",
    "@typescript-eslint/utils": "^8.18.2",
    "esbuild": "^0.24.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.3",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "packageManager": "yarn@4.5.3+sha256.dddc0b96ad2dca8d56a5302b56bf3cbf8210654474a6bf88877da61e866f3d46"
}
