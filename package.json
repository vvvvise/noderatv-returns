{
  "name": "noderatv-returns",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "client": "yarn workspace @noderatv-returns/client",
    "server": "yarn workspace @noderatv-returns/server",
    "synaptix": "yarn workspace @noderatv-returns/synaptix",
    "tests": "yarn workspace @noderatv-returns/tests",
    "dev": "turbo dev",
    "dev:client": "turbo dev --scope=@noderatv-returns/client",
    "dev:server": "turbo dev --scope=@noderatv-returns/server",
    "dev:synaptix": "turbo dev --scope=@noderatv-returns/synaptix",
    "build": "turbo build",
    "build:client": "turbo build --scope=@noderatv-returns/client",
    "build:server": "turbo build --scope=@noderatv-returns/server",
    "build:synaptix": "turbo build --scope=@noderatv-returns/synaptix",
    "lint": "turbo lint",
    "format": "prettier --write .",
    "typecheck": "turbo typecheck",
    "clean": "turbo run clean"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@noderatv-returns/client": "workspace:*",
    "@noderatv-returns/server": "workspace:*",
    "@noderatv-returns/synaptix": "workspace:*",
    "@noderatv-returns/tests": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@typescript-eslint/typescript-estree": "^8.18.2",
    "@typescript-eslint/utils": "^8.18.2",
    "esbuild": "^0.24.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.3",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "packageManager": "yarn@4.5.3+sha256.dddc0b96ad2dca8d56a5302b56bf3cbf8210654474a6bf88877da61e866f3d46"
}
